<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ddd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/liFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:transitionName="friendname"
        app:layout_constraintStart_toEndOf="@+id/liFriendImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/liFriendNumOfShishas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Shishas"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imgFriendIcon"
        app:layout_constraintTop_toBottomOf="@+id/liFriendName" />

    <Button
        android:id="@+id/liDeleteFriend"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/icon_remove_friend"
        android:transitionName="deletebutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/liFriendImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:transitionName="profileimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <!--app:srcCompat="@drawable/user_avatar"-->

    <ImageView
        android:id="@+id/imgFriendIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/icon_setup_white"
        android:tint="#000"
        app:layout_constraintStart_toEndOf="@+id/liFriendImage"
        app:layout_constraintTop_toBottomOf="@+id/liFriendName" />


</android.support.constraint.ConstraintLayout>