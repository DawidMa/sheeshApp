<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dropwondLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dropdownTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="HEY"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        app:layout_constraintStart_toEndOf="@+id/dropdownImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dropdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dropdownTitle"
        android:layout_below="@id/dropdownTitle"
        android:layout_marginStart="8dp"
        android:text="BYE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintStart_toEndOf="@+id/dropdownImage"
        app:layout_constraintTop_toBottomOf="@+id/dropdownTitle" />

    <ImageView
        android:id="@+id/dropdownImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_friends_orange" />

</android.support.constraint.ConstraintLayout>